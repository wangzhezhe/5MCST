FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 1e-05;

boundaryField
{
    inlet
    {
        type            freestream;
        freestreamValue $internalField;
    }

    outlet
    {
        type            freestream;
        freestreamValue $internalField;
    }

    wall
    {
        type            nutUSpaldingWallFunction;
        value           uniform 0;
    }

    frontandback
    {
        type            empty;
    }

    top
    {
	type            symmetry;
    }

    bottom
    {
	type            symmetry;
    }


}


